    name = "dist_7zip_linux_x86_64",
    urls = [
        "https://www.7-zip.org/a/7z2407-linux-x64.tar.xz",
    ],
    integrity = "sha256-SkeHen9uun/myQD3N5uyBhuWILWIzzGJ2ZriqKqo9QM=",
    build_file = "//toolchains/7zip:BUILD.linux.7zip.bzl",
